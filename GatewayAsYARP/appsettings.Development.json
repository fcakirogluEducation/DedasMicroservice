{

  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "products-microservice-cluster",
        "Match": {
          "Path": "products-microservice/{**catch-all}"
        },
        "Transforms": [ { "PathPattern": "{**catch-all}" } ]
      }
    },
    "Clusters": {
      "products-microservice-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7105/api/Products"
          }

        }
      }
    }
  },



  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
